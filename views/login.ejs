<%- include('partials/header') -%>
<main class=" m-5 bg-primary rounded">
  <div class="row justify-content-center">
    <div class=" row col-12 text-center justify-content-center">
      <div class=" card m-5 col-6 shadow">
        <div class=" card-header bg-info row justify-content-center">
          <p class="card-title fs-3 text-white">Login</p>
          <div class=" col-6 align-items-center justify-content-center">
            <img src="https://res.cloudinary.com/instincdev/image/upload/v1667348460/teacher_bhduys.png" alt="" class="img-fluid">
          </div>
          
       
        </div>
        <div class="card-body row justify-content-center">
    <section class="col mt-3">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">
        
        <div class="mb-3 ">
          <label for="exampleInputEmail1" class="form-label"
            >Email Address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label ">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <div class="row gap-2 justify-content-center">
          <button type="submit" class=" col-md-5 g-2 col-sm-6 btn btn-info">Submit</button>
        <a href="/"class="col-md-5 g-2 col-sm-6 btn btn-outline-info ">Back</a>
        </div>
        
      </form>
    </section>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') -%>
