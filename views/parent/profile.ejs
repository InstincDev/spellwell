<%- include('../partials/header') -%>
<div class="container mt-5 bg-primary">
    <div class="row justify-content-center">
        <div class="m-5 card col-8 justify-content-center bg-info">
            <div class="row bg-white justify-content-evenly">
                <p class="col-4">
                    <strong>User Name</strong>: <%= user.userName %>
                </p>

                <div
                    class="col-4 d-flex row justify-content-center align-items-center"
                >
                    <a href="/logout" class="btn-sm btn btn-info">Logout</a>
                </div>
            </div>
            <div class="mt-5 mb-5 card">
                <div class="row justify-content-center align-self-center">
                    <div
                        class="col-md-7 text-center row justify-content-center align-self-center"
                    >
                        <h2>Tests</h2>
                        <div
                            class="row justify-content-center align-items-center mb-3"
                        >
                            <form class="justify-content-center align-self-center row">
                                <div class="dropdown row justify-content-start">
                                    <div class="col-lg-6">
                                        <select
                                            name="testId"
                                            class="col-6 form-select"
                                            aria-label="list of spelling test titles"
                                        >
                                            <option selected disabled>
                                                Tests
                                            </option>
                                            <%for(let i =0; i < tests.length;
                                            i++) { %>
                                            <option
                                                id="testName"
                                                value="<%=tests[i]._id%>"
                                            >
                                                <%=tests[i].title%>
                                            </option>
                                            <%} %>
                                        </select>
                                    </div>
                                    <div class="text-center col-lg-5">
                                        <button class="btn btn-sm btn-info">
                                            View Test
                                        </button>
                                    </div>
                                </div>
                            </form>

                            <% if(!selectedTest){%>
                            <p>No Test Selected</p>
                            <%} else {%>
                            <p class="text-center mt-2 fs-5">
                                <%=selectedTest.title%>
                            </p>

                            <div class="row">
                                <ul class="list-unstyled text-center col-6">
                                    <li><strong>Base Words</strong></li>
                                    <% for (word of selectedTest.baseWords) {%>
                                    <li><%=word%></li>
                                    <%}%>
                                </ul>

                                <ul
                                    class="list-unstyled text-center align-self-start col-6"
                                >
                                    <li><strong>Challenge Words</strong></li>
                                    <% for (word of selectedTest.challengeWords)
                                    {%>
                                    <li><%=word%></li>
                                    <%}%>
                                </ul>
                               
                            </div>
                           
                        <%}%>
                        </div>
                    </div>
                    <div
                        class="col-md-4 text-center row justify-content-start align-self-start"
                    >
                        <h2>Students</h2>
                        <div
                            class="row mb-3 "
                        >
                            <% if(testResults.length == 0){%>
                                <p>No Students</p>
                            <%} else {%>
                                <table>
                                <thead class=" ">
                                    <tr class="justify-content-start">
                                        <td>Name</td>
                                        <td>Grade</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%if(!selectedTest) {%> 
                                        <% for(let i = 0; i< child.length; i++) {%>
                                            <tr>
                                                <td><%= child[i].userName %></td>
                                                <td>-</td>
                                            </tr>
                                        <%}%>
                                    <%} else {%> 
                                        <%for(let i =0; i< testResults.length;i++){%>
                                             <tr>
                                                <td><%= child[i].userName %></td>
                                            <%if(testResults[i][0]!= undefined){%>
                                                <%for(let j = 0;j< testResults[i][0].grades.length;j++){%>
                                                    <%if(testResults[i][0].grades[j].test== selectedTest.title){%>
                                                       
                                                            <td>
                                                                <%= testResults[i][0].grades[j].grade %>
                                                            </td>
                                                        
                                                    <%}%>

                                                <%}%>
                                            <%} else {%>
                                            <td>-</td>
                                            <%}%>
                                        </tr>
                                        <%}%>
                                    <%}%>
                                        
                                    
                                </tbody>
                                </table>
                            <%}%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') -%>
</div>
